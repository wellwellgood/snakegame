{
    "name": "snakegame",
    "version": "1.0.0",
    "description": "Snake game packaged with Electron",
    "main": "electron/main.js",
    "homepage": ".",
    "scripts": {
        "start": "cross-env HOST=0.0.0.0 PORT=8082 react-scripts start",
        "web:build": "react-scripts build",
        "electron": "wait-on http://localhost:8082 && electron .",
        "dev": "concurrently \"npm run start\" \"npm run electron\"",
        "dist": "npm run web:build && electron-builder"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@apps-in-toss/framework": "^1.1.2",
        "@apps-in-toss/web-framework": "^1.1.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-scripts": "^5.0.1",
        "web-vitals": "^3.5.2"
    },
    "devDependencies": {
        "concurrently": "^9.2.1",
        "cross-env": "^7.0.3",
        "electron": "^38.2.2",
        "electron-builder": "^26.0.12",
        "wait-on": "^8.0.5"
    },
    "build": {
        "appId": "com.snakegame.app",
        "productName": "SnakeGame",
        "directories": {
            "output": "dist"
        },
        "files": [
            "build/**/*",
            "electron/**/*",
            "package.json"
        ],
        "win": {
            "target": "nsis"
        }
    }
}